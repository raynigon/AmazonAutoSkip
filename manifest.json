{
  "name": "AmazonAutoSkip",
  "version": "1.4",
  "description": "Skips the intros and ads automatically in amazon video",
  "permissions": ["activeTab", "storage"],
  "options_ui": {
    "page": "pages/options/index.html"
  },
  "applications": {
    "gecko": {
      "id": "{6a714ef0-a850-49bc-b796-560df60a02c9}"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.cn/*",
        "https://*.amazon.in/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.com.sg/*",
        "https://*.amazon.com.tr/*",
        "https://*.amazon.ae/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.de/*",
        "https://*.amazon.it/*",
        "https://*.amazon.nl/*",
        "https://*.amazon.es/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.com.mx/*",
        "https://*.amazon.com/*",
        "https://*.amazon.com.au/*",
        "https://*.amazon.com.br/*"
      ],
      "js": ["background.js"]
    }
  ],
  "icons": {
    "16": "images/logo_16.png",
    "32": "images/logo_32.png",
    "48": "images/logo_48.png",
    "128": "images/logo_128.png"
  },
  "manifest_version": 2
}
